@model Gobi.Test.Jr.Domain.TodoItem

<input type="hidden" asp-for="Id" />

<div class="row">
    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Completed">
            <label class="form-check-label" asp-for="Completed">
            </label>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>

    <div class="col-lg-12">
        <button class="btn btn-primary">
            Salvar
        </button>
    </div>
</div>